        button.button.is-primary.is-size-4.px-6
          = link_to '怒りを記録する', new_anger_record_path
        div.field.is-grouped.column.is-7.is-offset-3
          div.control
            button.button.is-primary.is-light.is-size-5
              = link_to '今日出来たことを記録する', new_success_record_path
          div.control
            button.button.is-primary.is-light.is-size-5
              = link_to '記録カレンダーを見る', calendars_path
